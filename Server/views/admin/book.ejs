<% include ../partials/header %>

  <!--NAVIGATION BAR FOR ADMIN-->
  <% include ../partials/adminNav %>

    <!--SHOW BOOK EDIT FORM-->
    <div class="container my-4">
      <div class="row justify-content-center">
        <div class="col card"
          style="margin-top: 20px;margin-bottom: 20px;border: 1px solid black;padding-top: 20px;padding-bottom: 20px;">

          <div class="card-header text-center" style="background: rgb(100, 170, 236);margin-bottom: 10px;">
            <h4>Edit Book</h4>
          </div>
          <form action="/admin/book/update/<%=book._id%>" method="POST">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="title" class="form-control-label">Edit Title</label>
                  <input name="book[title]" type="text" class="form-control" value="<%=book.title%>">
                </div>

                <div class="form-group">
                  <label for="author" class="form-control-label">Edit Author</label>
                  <input name="book[author]" type="text" class="form-control" value="<%=book.author%>">
                </div>

                <div class="form-group">
                  <label for="category" class="form-control-label">Edit Catergory</label>
                  <select class="form-control" name="book[category]" id="book-category" value="<%=book.category%>"
                    required>
                    <option value="Fiction">Fiction</option>
                    <option value="Novel">Novel</option>
                    <option value="Short Story">Short Story</option>
                    <option value="Educational">Educational</option>
                    <option value="Religious">Religious</option>
                    <option value="History">History</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="author" class="form-control-label">ISBN</label>
                  <input name="book[ISBN]" type="text" class="form-control" readonly value="<%=book.ISBN%>">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="stock" class="form-control-label">Stock</label>
                  <input type="number" id="book-stock" name="book[stock]" value="<%=book.stock%>" class="form-control">
                </div>
                <div class="form-group">
                  <label for="description">Edit Description</label>
                  <textarea name="book[description]" cols="30" rows="10"
                    class="form-control"><%=book.description%></textarea>
                </div>
              </div>
            </div>
            <button class="btn btn-primary btn-block" id="update-book-btn"
              style="width: 50%;margin-left: 25%;">Update!</button>
          </form>
        </div>
      </div>
    </div>

    <% include ../partials/footer %>