<% include ../partials/header %>
  <% include ../partials/navbar %>
    <style>
      #adminLoginForm {
        background: url('/image/other/2.jpg') no-repeat;
        background-position: center;
        background-attachment: fixed;
        background-size: 100% 100%;
        -webkit-background-size: 100% 100%;
        -moz-background-size: 100% 100%;
        -o-background-size: 100% 100%;
        -ms-background-size: 100% 100%;
      }
    </style>
    <section id="adminLoginForm">
      <div class="container">
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <div class="card" style="margin-top: 5%; margin-bottom: 5%;">
              <div class="card-header text-center">
                <% include ../partials/alerts %>
                  <h4>Admin Login</h4>
              </div>
              <div class="card-block">
                <form class="p-3" action="/auth/admin-login" method="POST">
                  <div class="form-group">
                    <label class="form-control-label">Username</label>
                    <input type="text" name="username" id="username" placeholder="Username" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="form-control-label">Password</label>
                    <input type="password" name="password" id="password" placeholder="Password" class="form-control">
                  </div>
                  <button type="submit" id="btn_submit" class="btn btn-primary btn-block">Login!</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <% include ../partials/footer %>